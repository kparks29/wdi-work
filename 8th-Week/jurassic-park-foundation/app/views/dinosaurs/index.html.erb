<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Other name</th>
      <th>Diet</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dinosaurs.each do |dinosaur| %>
      <tr>
        <td><%= dinosaur.name %></td>
        <td><%= dinosaur.other_name %></td>
        <td><%= dinosaur.diet %></td>
        <td><%= dinosaur.description %></td>
        <td><%= link_to 'Show', dinosaur %></td>
        <td><%= link_to 'Edit', edit_dinosaur_path(dinosaur) %></td>
        <td><%= link_to 'Destroy', dinosaur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

